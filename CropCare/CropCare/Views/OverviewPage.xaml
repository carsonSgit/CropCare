<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CropCare.Views.OverviewPage"
             Title="Overview"
             Shell.BackgroundColor="#2D7245">
       
    
    <!-- Main Layout -->
    <Grid BackgroundColor="#ECECEC">
        <!-- Main content area -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <VerticalStackLayout Grid.Row="0" Spacing="20" Margin="10,10,10,10"  HorizontalOptions="Center">
            <Frame BackgroundColor="#F4F4F4" IsVisible="{Binding hasFarms}">
                <!-- CollectionView for displaying farms -->
                <CollectionView 
                    x:Name="farmsCollectionView"
                    ItemsSource="{Binding FarmsCollection}"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="5" CornerRadius="5" Margin="0, 7.5, 0, 7.5">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Farm_Tapped" />
                                </Frame.GestureRecognizers>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackLayout Grid.Column="0" Padding="10">
                                        <Label Text="{Binding Name}" FontSize="Medium" />
                                        <!-- HARDCODED PLACEHOLDER -->
                                        <HorizontalStackLayout Margin="0, 5, 0, 0">
                                            <BoxView Color="Red" HeightRequest="10" WidthRequest="10" CornerRadius="20"/>
                                            <Label Text="Critical" HorizontalOptions="Start" VerticalOptions="CenterAndExpand" Margin="5,0,0,0"/>
                                        </HorizontalStackLayout>
                                        <!-- HARDCODED PLACEHOLDER -->
                                    </StackLayout>
                                    <Image Grid.Column="1" Source="{Binding IconPath}" HeightRequest="40" HorizontalOptions="End" Margin="0, 0, 10, 0"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>
        </VerticalStackLayout>

        <ImageButton 
            Grid.Row="1"
            Source="add.png"
            HorizontalOptions="End"
            VerticalOptions="Center"
            Margin="20"
            MaximumHeightRequest="60"
            MaximumWidthRequest="60"
            Padding="10"
            CornerRadius="10"
            Clicked="Btn_Add_Farm"
            BackgroundColor="#7CA78A" 
            IsVisible="{Binding IsOwner}"
            />
    </Grid>
</ContentPage>
