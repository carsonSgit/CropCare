<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CropCare.Views.DashboardPage"
             Title="DashboardPage">
    <VerticalStackLayout>
        <Label 
            Text="Temp Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <VerticalStackLayout Spacing="10">
            <Button
                Text="Plants"
                Clicked="PlantNavigate_Clicked"/>

            <Button
                Text="Loation"
                Clicked="LocationNavigate_Clicked"/>

            <Button
                Text="Security"
                Clicked="SecurityNavigate_Clicked"/>

            <Button
                Text="Controls"
                Clicked="ControlsNavigate_Clicked"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>