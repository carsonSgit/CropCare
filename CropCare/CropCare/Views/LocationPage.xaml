<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:sensors="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials"
             x:Class="CropCare.Views.LocationPage"
             Title="Location">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0">
            <maps:Map x:Name="map">
            </maps:Map>
        </StackLayout>
        <StackLayout Grid.Row="1" Margin="30">
            <HorizontalStackLayout HorizontalOptions="Center">
                <Frame Padding="10" CornerRadius="10"  BorderColor="#516250" WidthRequest="140" Margin="10">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="Pitch" FontAttributes="Bold"  VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="Large"/>
                        <Label VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="40">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding Pitch, StringFormat='{0:F0}'}" />
                                    <Span Text="{Binding PitchRollUnit}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </StackLayout>
                </Frame>
                <Frame Padding="10" CornerRadius="10"  BorderColor="#516250" WidthRequest="140" HeightRequest="120" Margin="10">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="Roll" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="Large"/>
                        <Label VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="40">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding Roll, StringFormat='{0:F0}'}" />
                                    <Span Text="{Binding PitchRollUnit}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </StackLayout>
                </Frame>
            </HorizontalStackLayout>
            <VerticalStackLayout>
                <Frame BorderColor="#516250" CornerRadius="5" Margin="15,10,15,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Start" Margin="5, 0, 5, 0" Text="Buzzer"/>
                        <Switch Grid.Column="1" Grid.Row="0" 
                            Margin="0, -10, 0, 0" 
                            OnColor="Green" 
                            ThumbColor="GhostWhite"
                            VerticalOptions="Center" 
                            HorizontalOptions="EndAndExpand"
                            IsToggled="{Binding BuzzerState}"
                            Toggled="buzzer_Toggled"
                            x:Name="buzzer"/>
                        <Label Grid.Column="0" Grid.Row="1" FontSize="15" HorizontalTextAlignment="Start" Margin="5, 5, 5, 0" Text="{Binding Buzzer.State}" x:Name="led_healthLbl"/>
                    </Grid>
                </Frame>
            </VerticalStackLayout>
        </StackLayout>
    </Grid>
</ContentPage>
