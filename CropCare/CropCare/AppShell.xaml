<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CropCare.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CropCare"
    xmlns:views="clr-namespace:CropCare.Views"
    Shell.FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <Label Text="CropCare" FontSize="Large"  VerticalOptions="Center" Margin="20,0,0,0"/>
    </Shell.FlyoutHeader>

    <Shell.FlyoutFooter>
        <Label Text="CropCare Inc. Â©" Margin="20,20,20,0"/>
    </Shell.FlyoutFooter>
    
    <!-- Landing Page -->
    <ShellContent Route="Login" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="Signup" ContentTemplate="{DataTemplate views:SignUpPage}" />

    
    <!-- Flyout Menu -->
    <FlyoutItem Route="Index" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Dashboard" ContentTemplate="{DataTemplate views:DashboardPage}" Route="DashboardPage"/>
        <ShellContent Title="Overview" ContentTemplate="{DataTemplate views:OverviewPage}" Route="OverviewPage"/>
        <ShellContent Title="Settings" ContentTemplate="{DataTemplate views:SettingsPage}" Route="SettingsPage"/>
        <ShellContent Title="Account" ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage"/>
    </FlyoutItem>

</Shell>
